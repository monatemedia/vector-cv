# Environment Configuration Example for Vector CV App.
# Rename this file to .env and fill in the appropriate values.
# The RAG application needs at least an OpenAI API key to function properly.

# OpenAI API
OPENAI_API_KEY=your_openai_key_here

# Auth Credentials
AUTH_USERNAME=user
AUTH_PASSWORD=password
AUTH_NAME="Admin User"

# API URL for Frontend and Streamlit to connect to Backend through Nginx
PROXY_ROOT_PATH=

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://your-vps-ip:3000

# Rate Limiting Settings
ADMIN_API_KEY=your_super_secret_key_here
ENABLE_RATE_LIMITING=true
MAX_CV_PER_DAY=3
GENERAL_RATE_LIMIT=60 

# Cookie settings for persistence
COOKIE_NAME="vector_cv_auth"
COOKIE_KEY="some_very_random_secret_string"

# Database Components
DB_USER=vector_cv_user
DB_PASSWORD=vector_cv_pass
DB_HOST=localhost
DB_PORT=5433
DB_NAME=vector_cv_db

# Port Configuration
BACKEND_PORT=8010
STREAMLIT_PORT=8501
FRONTEND_PORT=3000