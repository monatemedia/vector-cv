# Auth Credentials
AUTH_USERNAME=user
AUTH_PASSWORD=password  # This can be plain text initially, we will hash it below
AUTH_NAME="Admin User"
AUTH_EMAIL="admin@example.com"

# Cookie settings for persistence
COOKIE_NAME="vector_cv_auth"
COOKIE_KEY="some_very_random_secret_string"

# Database Components
DB_USER=resume_user
DB_PASSWORD=resume_pass
DB_HOST=localhost
DB_PORT=5433
DB_NAME=resume_db

# Port Configuration
BACKEND_PORT=8010
STREAMLIT_PORT=8501
FRONTEND_PORT=3000

# API URL for Frontend and Streamlit to connect to Backend through Nginx
PROXY_ROOT_PATH=

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://your-vps-ip:3000

# Rate Limiting Settings
ADMIN_API_KEY=your_super_secret_key_here
ENABLE_RATE_LIMITING=true
MAX_CV_PER_DAY=3
GENERAL_RATE_LIMIT=60

# OpenAI API
OPENAI_API_KEY=your_openai_key_here